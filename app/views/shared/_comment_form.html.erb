<%= form_for(current_user.posts.build(id: post.id,bubble_id: post.bubble_id, comment_ind: 1)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Comment..." %>

    <%= f.hidden_field :id  %>
    <%= f.hidden_field :bubble_id%>
    <%= f.hidden_field :comment_ind%>
  </div>
  <div>
   <%= f.submit "Comment", class: "btn btn-small btn-primary" %>
  </div>
<% end %>