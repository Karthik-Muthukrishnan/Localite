<% if post.PostLike.any? %>
<li>
  <p>
      <%= pluralize(post.PostLike.count, "like") %>
  </p>
</li>
<% end %>
<li>
  <p>
      <%= pluralize(Post.getComments(post).count, "comment") %>
  </p>
</li>
<li>
	
  <% if current_user?(post.user) %>
    <%= link_to "delete", post, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: post.content %>
  <% end %>
  </span>
</li>

