
<div class="row">
	<div class="large-2 columns small-3">
    <%= link_to gravatar_for(post.user,size: 32), post.user %>
  
    <div>
    <span class="user">
    	<%= link_to post.bubble.pincode, post.bubble %> ::
    	<%= post.bubble.name %>
    </span>
    </div>
    </div>
    <div class="large-10 columns">
    <p>  
    <strong class="user">
      <%= link_to post.user.name, post.user %>
    </strong>
    <%= wrap(post.content) %>
    </p>

  <div id="post1">
    <ul class = "inline-list">
      <li>
      <% if @current_user.alreadyLike?(post) %>
        <%= render 'posts/nolike', post: post %>
      <% else %>
        <%= render 'posts/like', post: post %>
      <% end %>
      </li>
      <li> share </li>
    </ul>
 </div>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
  <% if current_user?(post.user) %>
    <%= link_to "delete", post, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: post.content %>
  <% end %>


<section>
        <%= render partial: 'posts/comment', collection: Post.getComments(post) %>
</section>

<section>
        <%= render 'shared/comment_form', post: post %>
   </section>
</div>
</div>
