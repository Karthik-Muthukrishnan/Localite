<ul class = "inline-list">
      <li>
      	<div class="row collapse">
           <div class="small-9 columns">
          	  <% if @current_user.alreadyLike?(post) %>
		        <%= render 'posts/nolike', post: post %>
		      <% else %>
		        <%= render 'posts/like', post: post %>
		      <% end %>
          </div>
      	  <div class="small-3 columns">
        	  <button class="tiny radius secondary disabled"><%= render "shared/like_stat", post: post %></button>
        	</div>
      	</div>
      
      </li>
     <li class="right">
	
  		<% if current_user?(post.user) %>
    	<%= link_to "delete", post, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: post.content %>
  		<% end %>
  
</li>
      
</ul>