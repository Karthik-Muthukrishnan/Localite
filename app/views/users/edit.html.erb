<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>

<div class="row">
  <div class="large-6 small-10 large-centered small-centered columns">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "button radius" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target= "_blank">change</a>
  </div>
</div>
