<% provide(:title, @user.name) %>


<div class="small-12 medium-4 large-4 columns medium-pull-8 large-pull-6">
      <aside>
        
        <section>
        	<%= render 'shared/user_info'%>
        </section>
        <%= render "shared/user_side_panel" %>

      </aside>
    </div>
    <div class="small-12 medium-8 large-8 columns">
    	<% if @posts.any? %>
  		<ol class="posts">
    		<%= render partial: 'posts/post', collection: @posts %>
  		</ol>
  		<%= will_paginate @posts %>
  		<% end %>

    </div>